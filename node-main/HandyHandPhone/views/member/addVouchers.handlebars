<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="/assets/css/addVoucher/css">

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form method="post" action="/member/addVouchers" enctype="multipart/form-data">
        <h3>Add a new Voucher</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">

                    {{!-- <select name="category" id=""></select> --}}
                    <label for="category" class="col-md-">Choose a category</label>
                    <select id="category" name="category">
                        <option value="delivery">Delivery</option>
                        <option value="discount">Discounts</option>
                        <option value="free-gift">Free Gifts</option>

                    </select>
                </div>
                <div class="form-group">
                    <input type="int" name="discount" class="form-control" placeholder="voucher - percentage"
                        value="" />
                </div>
                <div class="form-group">
                    <input type="int" name="price" class="form-control" placeholder="voucher - price (website points)"
                        value="" />
                </div>
                <div class="form-group">
                    <input type="int" name="name" class="form-control" placeholder="voucher - name"
                        value="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Voucher Description"
                        style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btn btn-primary" value="Add Voucher" />
                </div>
            </div>

        </div>
    </form>
</div>