<link rel="stylesheet" href="\assets\css\address.css">
<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Edit Order Status</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input type="date" id="form7Example1" class="form-control" name="date"
                                    value="{{orderstatus.date}}" />
                                <label class="form-label" for="form7Example1">Date</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <input type="time" id="form7Example1" class="form-control" name="time"
                                    value="{{orderstatus.time}}" />
                                <label class="form-label" for="form7Example1">Time</label>
                            </div>
                        </div>
                    </div>
                    <!-- Text input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="form7Example2" class="form-control" name="ordernumber"
                            value="{{orderstatus.ordernumber}}" />
                        <label class=" form-label" for="form7Example2">Order Number</label>
                    </div>

                    <!-- Text input -->
                    <div class="form-outline mb-4">
                        <button type="" id="form7Example3" class="form-control" name="orderstatus"
                            value="{{orderstatus.orderstatus}}" />
                        <select name="orderstatus" id="orderstatus">
                            <option>Order Proccessed</option>
                            <option>Order Confirmed</option>
                            <option>Order Out for Delivery</option>
                            <option>Order Arrived</option>
                        </select>
                        <label class=" form-label" for="form7Example3">Order status</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                        Save
                    </button>
                </form>
            </div>

        </div>
    </div>


</div>
</div>
</div>