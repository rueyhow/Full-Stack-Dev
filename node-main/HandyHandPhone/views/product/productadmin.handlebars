<div>
    <table class="table table-striped mt-5 mx-auto" style="width: 90%;">
        <thead>
            <tr>
                <th>
                    <p class="p-2 text-center">Product ID</p>
                </th>
                <th>
                    <p class="p-2 text-center">Product Image</p>
                </th>
                <th>
                    <p class="p-2 text-center">Name</p>
                </th>
                <th>
                    <p class="p-2 text-center">Price</p>
                </th>
                <th>
                    <p class="p-2 text-center">Stock</p>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td class="align-middle">
                    <p class="text-center">{{ this.id }}</p>
                </td>
                <td class="d-flex"><img style="width:auto;height:100px;" class="img mx-auto"
                        src="data:image/png;base64, {{this.productPic}}" alt=""></td>
                <td class="align-middle">
                    <p class="text-center">{{ this.name }}</p>
                </td>
                <td class="align-middle">
                    <p class="text-center">${{this.price}}</p>
                </td>
                <td class="align-middle">
                    <p class="text-center">{{ this.stock }}</p>
                </td>
                <td class="align-middle">
                    <a href="product/editProduct/{{this.id}}" class="btn btn-warning ">Update</a>
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger align-middle" data-bs-toggle="modal"
                        data-bs-target="#myModal_{{this.id}}">
                        Delete
                    </button>

                    <!-- The Modal -->
                    <div class="modal" id="myModal_{{this.id}}">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title text-danger">Delete Confirmation</h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body text-danger">
                                    Are you sure you want to delete {{ this.name }}?
                                </div>


                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <input type="submit" value="Delete" class="btn btn-danger">
                                    <a href="/product/deleteProduct/{{this.id}}"><button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cancel</button></a>
                                </div>

                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>