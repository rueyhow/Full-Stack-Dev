<div class=" h-100">
    <div class="mask d-flex align-items-center h-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-7 col-xl-6">
                    <div class="card mask-custom">
                        <div class="card-body p-5 text-black">

                            <div class="-4">

                                <h1 class="text-center mb-5">Edit Product</h2>

                                    <form method="post">
                                        <!-- 2 column grid layout with text inputs for the first and last names -->
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-outline form-white">
                                                    <input type="text" id="form3Example2"
                                                        class="form-control form-control-lg" name="name"
                                                        value="{{product.name}}" />
                                                    <label class="form-label" for="form3Example2">Product name</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-outline form-white mb-4">
                                            <label for="category">Category:</label>
                                            <select id="category" name="category">
                                                <option value="Mobile Device"{{#ifeq product.category 'Mobile Device'}}selected{{/ifeq}} >Mobile Device</option>
                                                <option value="Accessories" {{#ifeq product.category 'Accessories'}}selected{{/ifeq}} >Accessories</option>
                                            </select>
                                        </div>
                                        <!-- Email input -->
                                        <div class="form-outline form-white mb-4">
                                            <input type="number" id="form3Example3" class="form-control form-control-lg"
                                                name="price" value="{{product.price}}">
                                            <label class="form-label" for="form3Example3">Price</label>
                                        </div>

                                        <!-- Password input -->
                                        <div class="form-outline form-white mb-4">
                                            <input type="number" value="{{product.stock}}" id="form3Example4"
                                                class="form-control form-control-lg" name="stock" />
                                            <label class="form-label" for="form3Example4">Stock Amount</label>
                                        </div>

                                        <div class="form-group">
                                            <textarea class="form-control" value="{{product.description}}"
                                                name="description" id="exampleFormControlTextarea1"
                                                rows="3">{{product.description}}</textarea>
                                            <label for="exampleFormControlTextarea1">Product Description </label>
                                        </div>


                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-light btn-block mb-4">Submit</button>

                                    </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>